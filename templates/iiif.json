{
   "@context":"http://iiif.io/api/presentation/2/context.json",
   "@id":"{{.URL}}",
   "@type":"sc:Manifest",
   {{- if .ExemplarPID}}
   "thumbnail":"{{.IiifURL}}/iiif/{{.ExemplarPID}}/full/!200,200/{{.ExemplarRotation}}/default.jpg",
   {{- end}}
   "label":"{{.Title}}",
   {{- if .Metadata}}
   "metadata": {{.JSONMetadata}},
   {{- end}}
   "license":"{{.License}}",
   "attribution":"Provided by the University of Virginia Library",
   "logo":"{{.IiifURL}}/iiif/static:1/full/full/0/default.jpg",
   "related":"http://search.lib.virginia.edu/catalog/{{.VirgoKey}}",
   "sequences":[
      {
         "startCanvas": "{{.IiifURL}}/iiif/dl/{{.MetadataPID}}/canvas/c{{.StartPage}}",
         "@type":"sc:Sequence",
         "canvases":[
            {{- $metadataPid := .MetadataPID -}}
            {{- $iiifURL := .IiifURL -}}
            {{- range $index, $element := .MasterFiles -}}
            {{- if $index}},{{end -}}
            {
               "@id":"{{$iiifURL}}/iiif/dl/{{$metadataPid}}/canvas/c{{$index}}",
               "@type":"sc:Canvas",
               {{- if .Title}}
               "label":"{{.Title}}",
               {{- end}}
               {{- if .Description}}
               "description":"{{.Description}}",
               "metadata": [{"label":"Image Description", "value":"{{.Description}}"}],
               {{- end}}
               "thumbnail":"{{$iiifURL}}/iiif/{{.PID}}/full/!200,200/{{.Rotation}}/default.jpg",
               "width": {{.Width}},
               "height": {{.Height}},
               "images":[
                  {
                     "@type":"oa:Annotation",
                     "motivation":"sc:painting",
                     {{- if eq .Rotation "0"}}
                     "resource":{
                        "@id":"{{$iiifURL}}/iiif/{{.PID}}/full/full/{{.Rotation}}/default.jpg",
                        "@type":"dcTypes:Image",
                        "format":"image/jp2",
                        "width": {{.Width}},
                        "height": {{.Height}},
                        "service":{
                           "@context":"http://iiif.io/api/image/2/context.json",
                           "@id":"{{$iiifURL}}/iiif/{{.PID}}",
                           "profile":"http://iiif.io/api/image/2/level1.json"
                        }
                     },
                     {{- else}}
                     "resource":{
                        "@id":"{{$iiifURL}}/iiif/{{.PID}}/full/full/{{.Rotation}}/default.jpg",
                        "@type":"oa:SpecificResource",
                        "full": {
                           "@id":"{{$iiifURL}}/iiif/{{.PID}}/full/full/{{.Rotation}}/default.jpg",
                           "@type":"dcTypes:Image",
                           "width": {{.Width}},
                           "height": {{.Height}},
                           "service": {
                              "@context":"http://iiif.io/api/image/2/context.json",
                              "@id":"{{$iiifURL}}/iiif/{{.PID}}",
                              "profile":"http://iiif.io/api/image/2/level1.json"
                           }
                        },
                        "selector": {
                           "@context": "http://iiif.io/api/annex/openannotation/context.json",
                           "@type": "iiif:ImageApiSelector",
                           "rotation": "{{.Rotation}}"
                        }
                     },
                     {{- end}}
                     "on":"{{$iiifURL}}/iiif/dl/{{$metadataPid}}/canvas/c{{$index}}"
                  }
               ]
            }
            {{- end}}
         ]
      }
   ]
}
