{
   "@context":"http://iiif.io/api/presentation/2/context.json",
   "@id":"{{.URL}}",
   "@type":"sc:Manifest",
   {{- if .ExemplarPID}}
   "thumbnail":"https://iiif.lib.virginia.edu/iiif/{{.ExemplarPID}}/full/!200,200/{{.ExemplarRotation}}/default.jpg",
   {{- end}}
   "label":"{{.Title}}",
   {{- if .Metadata}}
   "metadata": {{.JSONMetadata}},
   {{- end}}
   "license":"{{.License}}",
   "attribution":"Provided by the University of Virginia Library",
   "logo":"https://iiif.lib.virginia.edu/iiif/static:1/full/full/0/default.jpg",
   "related":"http://search.lib.virginia.edu/catalog/{{.VirgoKey}}",
   "sequences":[
      {
         "startCanvas": "https://iiif.lib.virginia.edu/iiif/dl/{{.MetadataPID}}/canvas/c{{.StartPage}}",
         "@type":"sc:Sequence",
         "canvases":[
            {{- $metadataPid := .MetadataPID -}}
            {{- range $index, $element := .MasterFiles -}}
            {{- if $index}},{{end -}}
            {
               "@id":"https://iiif.lib.virginia.edu/iiif/dl/{{$metadataPid}}/canvas/c{{$index}}",
               "@type":"sc:Canvas",
               {{- if .Title}}
               "label":"{{.Title}}",
               {{- end}}
               {{- if .Description}}
               "description":"{{.Description}}",
               "metadata": [{"label":"Image Description", "value":"{{.Description}}"}],
               {{- end}}
               "thumbnail":"https://iiif.lib.virginia.edu/iiif/{{.PID}}/full/!200,200/{{.Rotation}}/default.jpg",
               "width": {{.Width}},
               "height": {{.Height}},
               "images":[
                  {
                     "@type":"oa:Annotation",
                     "motivation":"sc:painting",
                     "resource":{
                        "@id":"https://iiif.lib.virginia.edu/iiif/{{.PID}}",
                        "@type":"dcTypes:Image",
                        "format":"image/jp2",
                        "width": {{.Width}},
                        "height": {{.Height}},
                        "service":{
                           "@context":"http://iiif.io/api/image/2/context.json",
                           "@id":"https://iiif.lib.virginia.edu/iiif/{{.PID}}",
                           "profile":"http://iiif.io/api/image/2/level1.json"
                        }
                     },
                     "on":"https://iiif.lib.virginia.edu/iiif/dl/{{$metadataPid}}/canvas/c{{$index}}"
                  }
               ]
            }
            {{- end}}
         ]
      }
   ]
}
