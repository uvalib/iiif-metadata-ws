{
   "@context":"http://iiif.io/api/presentation/2/context.json",
   "@id":"{{.URL}}",
   "@type":"SC:Manifest",
   "label":"{{.Title}}",
   "logo":"http://iiif.lib.virginia.edu/iiif/static:1/full/full/0/default.jpg",
   "sequences":[
      {
         "@type":"sc:Sequence",
         "canvases":[
            {{- $metadataPid := .MetadataPID -}}
            {{- $iiifUrl := .IiifURL -}}
            {{range $index, $element := .MasterFiles}}
            {{- if $index}},{{end}}
            {
               "@id":"{{ $iiifUrl }}/dl/{{$metadataPid}}/canvas/c{{$index}}",
               "@type":"SC:Canvas",
               "label":"{{.Title}}",
               "description":"{{.Description}}",
               "thumbnail":"{{ $iiifUrl }}/{{.PID}}/full/90,146/0/default.jpg",
               "width": {{.Width}},
               "height": {{.Height}},
               "images":[
                  {
                     "@type":"oa:Annotation",
                     "motivation":"sc:painting",
                     {{- if .Transcription}}
                     "metadata": [
                        {"label": "transcription", "value": "{{.Transcription}}"}
                     ],
                     {{- end}}
                     "resource":{
                        "@id":"{{$iiifUrl}}/{{.PID}}",
                        "@type":"dcTypes:Image",
                        "format":"image/jp2",
                        "width": {{.Width}},
                        "height": {{.Height}},
                        "service":{
                           "@context":"http://iiif.io/api/image/2/context.json",
                           "@id":"{{$iiifUrl}}/{{.PID}}",
                           "profile":"http://iiif.io/api/image/2/level1.json"
                        }
                     },
                     "on":"{{$iiifUrl}}/dl/{{$metadataPid}}/canvas/c{{$index}}"
                  }
               ]
            }
            {{- end}}
         ]
      }
   ]
}
