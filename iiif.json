{
   "@context":"http://iiif.io/api/presentation/2/context.json",
   "@id":"{{.URL}}",
   "@type":"sc:Manifest",
   "label":"{{.Title}}",
   "logo":"http://iiif.lib.virginia.edu/iiif/static:1/full/full/0/default.jpg",
   "sequences":[
      {
         "startCanvas": "{{.IiifURL }}/dl/{{.MetadataPID}}/canvas/c{{.Exemplar}}",
         "@type":"sc:Sequence",
         "canvases":[
            {{- $metadataPid := .MetadataPID -}}
            {{- $iiifUrl := .IiifURL -}}
            {{- range $index, $element := .MasterFiles -}}
            {{- if $index}},{{end -}}
            {
               "@id":"{{ $iiifUrl }}/dl/{{$metadataPid}}/canvas/c{{$index}}",
               "@type":"sc:Canvas",
               {{- if .Title}}
               "label":"{{.Title}}",
               {{- end}}
               {{- if .Description}}
               "description":"{{.Description}}",
               {{- end}}
               "thumbnail":"{{ $iiifUrl }}/{{.PID}}/full/!200,200/0/default.jpg",
               "width": {{.Width}},
               "height": {{.Height}},
               "images":[
                  {
                     "@type":"oa:Annotation",
                     "motivation":"sc:painting",
                     "resource":{
                        "@id":"{{$iiifUrl}}/{{.PID}}",
                        "@type":"dcTypes:Image",
                        "format":"image/jp2",
                        "width": {{.Width}},
                        "height": {{.Height}},
                        "service":{
                           "@context":"http://iiif.io/api/image/2/context.json",
                           "@id":"{{$iiifUrl}}/{{.PID}}",
                           "profile":"http://iiif.io/api/image/2/level1.json"
                        }
                     },
                     "on":"{{$iiifUrl}}/dl/{{$metadataPid}}/canvas/c{{$index}}"
                  }
               ]
            }
            {{- end}}
         ]
      }
   ]
}
